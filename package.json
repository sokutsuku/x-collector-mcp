{
  "name": "x-collector-mcp",
  "version": "0.3.0",
  "description": "X(Twitter) data collection MCP server with human-like behavior and Google Sheets integration",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "x-collector": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsc && node build/index.js",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run build && echo 'Testing MCP server...' && timeout 5s node build/index.js || echo 'Build successful!'",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "twitter",
    "x",
    "data-collection",
    "puppeteer",
    "google-sheets",
    "claude",
    "automation"
  ],
  "author": "X Collector Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "puppeteer": "^22.0.0",
    "google-auth-library": "^9.0.0",
    "googleapis": "^134.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/x-collector-mcp.git"
  },
  "files": [
    "build/**/*",
    "README.md",
    "package.json"
  ],
  "overrides": {
    "typescript": "^5.4.0"
  }
}